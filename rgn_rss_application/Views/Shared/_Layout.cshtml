@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/Content/favicon_icon.png" />
    <!--[if IE]>
    <link rel="shortcut icon" href="~/Content/favicon_icon.png" type="image/vnd.microsoft.icon" />
    <![endif]-->

    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/bundledcss")
    @Scripts.Render("~/Scripts/bundledjs")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RSS Reader", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RSS Reader</p>
        </footer>
    </div>
</body>
</html>